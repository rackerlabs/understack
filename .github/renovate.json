{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "github>rackerlabs/understack//.github/renovate/default",
    "github>rackerlabs/understack//.github/renovate/nautobot",
    "github>rackerlabs/understack//.github/renovate/understackContainerMatch",
    "github>rackerlabs/understack//.github/renovate/matchOpenStackHelm"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "devbox"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": [
        "quay.io/argoproj/workflow-controller",
        "quay.io/argoproj/argoexec",
        "quay.io/argoproj/argocli",
        "argoproj/argo-workflows"
      ],
      "groupName": "Argo Workflows",
      "commitMessageTopic": "Argo Workflows"
    },
    {
      "matchDatasources": ["golang-version"],
      "groupName": "Go",
      "commitMessageTopic": "Go"
    },
    {
      "matchPackageNames": [
        "mariadb-operator",
        "mariadb-operator-crds"
      ],
      "groupName": "MariaDB Operator",
      "commitMessageTopic": "MariaDB Operator"
    },
    {
      "enabled": false,
      "matchPackageNames": ["python"],
      "matchUpdateTypes": ["major", "minor"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?<depName>[^/]+/[^/]+)/releases/download/v(?<currentValue>[^/]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "devbox": {
    "enabled": false
  }
}
