{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)images-openstack\\.ya?ml$"],
      "matchStrings": [
        ":\\s+\"?(?<depName>[^\\s:@\"]+):(?<currentValue>[-a-zA-Z_0-9.]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\"?"
      ],
      "datasourceTemplate": "docker",
      "autoReplaceStringTemplate": ": \"{{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\""
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["ghcr.io/rackerlabs/understack/**"],
      "groupName": "understack"
    }
  ]
}
